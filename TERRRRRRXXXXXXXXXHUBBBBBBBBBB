local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "TERz HUB"

local loadingFrame = Instance.new("Frame")
loadingFrame.Size = UDim2.new(1,0,1,0)
loadingFrame.BackgroundColor3 = Color3.fromRGB(0,0,0)
loadingFrame.Parent = gui

local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(1,0,1,0)
loadingText.BackgroundTransparency = 1
loadingText.Text = "BY IRON HUB"
loadingText.TextColor3 = Color3.fromRGB(255,255,255)
loadingText.TextSize = 40
loadingText.Font = Enum.Font.SourceSansBold
loadingText.Parent = loadingFrame

local toggleBtn = Instance.new("TextButton")
toggleBtn.Name = "ToggleUI"
toggleBtn.Size = UDim2.new(0,50,0,50)
toggleBtn.Position = UDim2.new(0,15,0,15)
toggleBtn.BackgroundColor3 = Color3.fromRGB(0,0,0)
toggleBtn.Text = ""
toggleBtn.Parent = gui

local mainFrame = Instance.new("Frame")
mainFrame.Name = "MainFrame"
mainFrame.Size = UDim2.new(0, 400, 0, 300)
mainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
mainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
mainFrame.Visible = false
mainFrame.Parent = gui
mainFrame.Active = true
mainFrame.Draggable = true

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
title.Text = "TERz HUB"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextSize = 20
title.Font = Enum.Font.SourceSansBold
title.Parent = mainFrame

local speedLabel = Instance.new("TextLabel")
speedLabel.Size = UDim2.new(1, -20, 0, 30)
speedLabel.Position = UDim2.new(0, 10, 0, 60)
speedLabel.BackgroundTransparency = 1
speedLabel.Text = "Speed: 16"
speedLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
speedLabel.TextSize = 18
speedLabel.Font = Enum.Font.SourceSansBold
speedLabel.Parent = mainFrame

local sliderBG = Instance.new("Frame")
sliderBG.Size = UDim2.new(1, -40, 0, 20)
sliderBG.Position = UDim2.new(0, 20, 0, 100)
sliderBG.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
sliderBG.Parent = mainFrame

local sliderBtn = Instance.new("Frame")
sliderBtn.Size = UDim2.new(0, 10, 1, 0)
sliderBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
sliderBtn.Parent = sliderBG
sliderBtn.Active = true
sliderBtn.Draggable = true

local function createButton(text, order)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, -20, 0, 30)
	btn.Position = UDim2.new(0, 10, 0, 130 + (order * 35))
	btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.TextSize = 18
	btn.Font = Enum.Font.SourceSansBold
	btn.Text = text
	btn.Parent = mainFrame
	return btn
end

local walkKillBtn = createButton("‚öîÔ∏è Walk Kill", 0)
local invisBtn = createButton("üëª Invisible", 1)
local noclipBtn = createButton("üåÄ Noclip", 2)
local knockBtn = createButton("üí• Knockback", 3)

local maxSpeed, defaultSpeed = 100, 16
local walkKill, invis, noclip, knock = false,false,false,false

local function updateSpeed()
	local percent = math.clamp(sliderBtn.Position.X.Offset / (sliderBG.AbsoluteSize.X - sliderBtn.AbsoluteSize.X), 0, 1)
	local speed = math.floor(percent * maxSpeed)
	if speed < 16 then speed = 16 end
	speedLabel.Text = "Speed: " .. speed
	local hum = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
	if hum then
		hum.WalkSpeed = speed
	end
end
sliderBtn:GetPropertyChangedSignal("Position"):Connect(updateSpeed)

walkKillBtn.MouseButton1Click:Connect(function()
	walkKill = not walkKill
	walkKillBtn.BackgroundColor3 = walkKill and Color3.fromRGB(0,170,0) or Color3.fromRGB(40,40,40)
end)

invisBtn.MouseButton1Click:Connect(function()
	invis = not invis
	invisBtn.BackgroundColor3 = invis and Color3.fromRGB(0,170,0) or Color3.fromRGB(40,40,40)
	local char = player.Character
	if char then
		for _,p in pairs(char:GetDescendants()) do
			if p:IsA("BasePart") and p.Name ~= "HumanoidRootPart" then
				p.Transparency = invis and 1 or 0
				local decal = p:FindFirstChildOfClass("Decal")
				if decal then
					decal.Transparency = invis and 1 or 0
				end
			end
		end
	end
end)

noclipBtn.MouseButton1Click:Connect(function()
	noclip = not noclip
	noclipBtn.BackgroundColor3 = noclip and Color3.fromRGB(0,170,0) or Color3.fromRGB(40,40,40)
end)

knockBtn.MouseButton1Click:Connect(function()
	knock = not knock
	knockBtn.BackgroundColor3 = knock and Color3.fromRGB(0,170,0) or Color3.fromRGB(40,40,40)
end)

game:GetService("RunService").Stepped:Connect(function()
	local char = player.Character
	if not char then return end
	local hrp = char:FindFirstChild("HumanoidRootPart")
	local hum = char:FindFirstChildOfClass("Humanoid")
	if not hrp or not hum then return end
	for _,p in pairs(char:GetDescendants()) do
		if p:IsA("BasePart") then
			p.CanCollide = not noclip
		end
	end
	hrp.Touched:Connect(function(hit)
		local otherChar = hit.Parent
		if otherChar and otherChar:FindFirstChild("Humanoid") and otherChar ~= char then
			if walkKill then
				otherChar:BreakJoints()
			end
			if knock then
				local hrp2 = otherChar:FindFirstChild("HumanoidRootPart")
				if hrp2 then
					local bv = Instance.new("BodyVelocity")
					bv.Velocity = Vector3.new(0,200,0)
					bv.MaxForce = Vector3.new(1e5,1e5,1e5)
					bv.Parent = hrp2
					game:GetService("Debris"):AddItem(bv,0.3)
				end
			end
		end
	end)
end)

player.CharacterAdded:Connect(function(char)
	local hum = char:WaitForChild("Humanoid")
	hum.WalkSpeed = defaultSpeed
end)

task.delay(3, function()
	loadingFrame:TweenSize(UDim2.new(0,0,0,0), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 1, true)
	task.wait(1)
	loadingFrame:Destroy()
	mainFrame.Visible = true
end)

toggleBtn.MouseButton1Click:Connect(function()
	mainFrame.Visible = not mainFrame.Visible
end)
